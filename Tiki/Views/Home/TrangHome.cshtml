    }

    .product {
        border: 1px solid #ccc;
        margin: 10px;
        padding: 10px;
        display: inline-block;
        text-align: center;
        background-color: white;
        
    }

        .product button {
            background-color: #ff8c00; /* Màu cam */
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
        }

            .product button:hover {
                background-color:deepskyblue; /* Màu cam tối hơn khi hover */
            }

    footer {
        background-color: #2d7bff; /* Màu xanh dương */
        color: white;
        text-align: center;
        padding: 10px 0;
        position: relative;
        width: 100%;
        bottom: 0;
    }
    .new-product {
        border: 1px solid #ccc;
        margin: 10px;
        padding: 10px;
        display: inline-block;
        text-align: center;
        background-color: white;
        width:250px;
    }
    .new-product img{
        width:150px;
        height:150px;
    }

        .new-product button {
        background-color: blue; /* Màu cam */
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        border-radius:10px;
        }
   
        .new-product button:hover {
            background-color: deepskyblue;
        }
</style>
@*slider*@
<style>
    .image-slider {
        overflow: hidden;
        height: 500px;
        width: 805px;
        margin-left: auto;
        margin-right: 90px;
        margin-top: 30px;
        position: relative;
    }

    .slide-images {
        display: flex;
        transition: transform 0.5s ease-in-out;
        width: 10000px;
    }

    .img-container {
        width: 800px;
        height: 600px;
        flex-shrink: 0;
    }

        .img-container img {
            width: 900px;
            height: auto;
            object-fit: cover;
        }

    /* Previous and Next buttons */
    button.prev, button.next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        cursor: pointer;
        padding: 10px;
        z-index: 10;
        font-size: 24px;
    }

    button.prev {
        left: 10px;
    }

    button.next {
        right: 10px;
    }
</style>
